#!/usr/bin/env bash
# applying redirect

sudo apt-get update

# Install Nginx, -y to make a default yes for all questions
sudo apt-get install -y nginx

# Create a simple "Hello World!" page
# tee do both show output to the terminal, write on file
echo "Hello World!" | sudo tee /var/www/html/index.html

# first make a new path in the server root
sudo mkdir /redirect_me

#replacing data in default file in sities_available
replace_string="server {\nlisten 80 default_server;\nlisten [::]:80 default_server;\nroot /var/www/html;\nindex index.html index.htm index.nginx-debian.html;\nserver_name _;\nlocation /redirect_me {\nreturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;}}"


#using sed
echo "$replace_string" | sudo tee /etc/nginx/sites-available/default

#refreshing server
sudo service nginx restart
